<div class="ui tab" data-tab="details">
    <h3 class="ui top header">{{ 'sylius.ui.vendor_details' | trans }}</h3>

    <div class="ui segment">
        
    {{ form_start(form, {'action': path('odiseo_sylius_vendor_plugin_admin_vendor_update', {'id': vendor.id}),
        'attr': {'class': 'ui loadable form', 'novalidate': 'novalidate'}}
    ) }}
    
        <div class="field">
            {{ form_label(form.logoFile) }}
            <div>
                <label for="odiseo_vendor_logoFile" class="ui icon labeled button">
                    <i class="cloud upload icon"></i> {{ 'sylius.ui.choose_file' | trans }}
                </label>
                
                {% set logoPath = vendor.logoName | imagine_filter( 'odiseo_sylius_vendor_plugin_logo' ) %}
                <img class="ui small bordered image" src="{{ logoPath }}" alt="{{ vendor.name }}">
                
                <div class="ui hidden element">
                    {{ form_widget(form.logoFile) }}
                </div>
            </div>
        </div>
        
        <div class="field">
            <div class="ui toggle checkbox">
                {{ form_label(form.enabled) }}
                {{ form_widget(form.enabled) }}
            </div>
        </div>
        
        {{ form_row(form.name) }}
        
        {{ form_row(form.email) }}
        
        {% include '@SyliusUi/Form/Buttons/_update.html.twig' with {'paths': formButtonsPaths} %}
        
    {{ form_end(form, {'render_rest': false}) }}
        
    </div>
    
</div>